<section>
<link rel="stylesheet" href="/css/user_profile.css">
<section id="sign_in">
 <img src="<%= user.avatar %>" alt="<%= user.name %>" width="260"> 
 <br>     
 <br>
<% if(user.id==profile_user.id){%>
     <!-- if user matches then show the form -->
     <form id="sign_in_form" action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" size="50" placeholder="Your name" value="<%= profile_user.name%>" required>
        <br>  
        <input type="email" name="email" size="50" placeholder="Your email" value="<%= profile_user.email %>" required>
        <br>  
        <input type="file" name="avatar" size="50" placeholder="profile pic"> 
        <br>  
        <input type="submit" size="50" value="Update">
        <br>  
    </form>
<%} else{%>
     <!-- else show only profile info -->
     <p><%= profile_user.name %></p>
     <p><%= profile_user.email %></p>
<%}%>
</section>
</section>